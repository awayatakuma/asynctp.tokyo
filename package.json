{
  "name": "myportfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --write",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "quality": "npm run format && npm run lint:fix && npm run type-check && npm run test",
    "quality:check": "npm run format:check && npm run lint && npm run type-check && npm run test",
    "info": "next info",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.4.2",
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@next/third-parties": "^14.2.3",
    "@pixiv/three-vrm": "^3.4.1",
    "@pixiv/three-vrm-animation": "^3.4.1",
    "@react-three/drei": "^9.114.3",
    "@react-three/fiber": "^8.17.10",
    "@types/mdx": "^2.0.13",
    "@types/three": "^0.177.0",
    "feed": "^5.1.0",
    "framer-motion": "^12.19.2",
    "gray-matter": "^4.0.3",
    "next": "^14.2.30",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "rehype-pretty-code": "^0.13.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "shiki": "^1.5.1",
    "three": "^0.177.0",
    "three-mesh-bvh": "^0.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "^18.3.12",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome format --write",
      "biome check --write",
      "git add"
    ]
  }
}
